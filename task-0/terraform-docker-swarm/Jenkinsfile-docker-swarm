pipeline {
    agent any

    parameters {
        string(name: 'SWARM_MANAGER_SERVER_IP', defaultValue: '192.168.1.188', description: 'IP address of the Docker Swarm Manager Server')
        string(name: 'SWARM_WORKER_SERVER_IP', defaultValue: '192.168.1.189', description: 'IP address of the Docker Swarm Worker Server')
    }

    environment {
        TF_VAR_swarm_manager_ip = "${params.SWARM_MANAGER_SERVER_IP}"
        TF_VAR_swarm_worker_ip  = "${params.SWARM_WORKER_SERVER_IP}"
    }

    stages {
       stage('Git checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir('task-0/terraform-docker-swarm') {
                    sh 'hostname && ip a | grep 192.168.1'
                    sh 'apt install -y sudo && terraform init'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('task-0/terraform-docker-swarm') {
                    sh 'hostname && ip a | grep 192.168.1'
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }
}
